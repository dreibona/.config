// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "terminal": {
    "copy_on_select": true,
    "minimum_contrast": 50.0,
    "cursor_shape": "bar",
    "font_weight": 300.0,
    "font_size": 16.0,
  },
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": false,
  },
  "show_whitespaces": "selection",
  "indent_guides": {
    "coloring": "indent_aware",
    "enabled": true,
  },
  "soft_wrap": "preferred_line_length",
  "tab_size": 2,
  "gutter": {
    "min_line_number_digits": 4,
    "folds": true,
    "line_numbers": true,
  },
  "minimum_contrast_for_highlights": 50.0,
  "agent_buffer_font_size": 14.0,
  "show_wrap_guides": false,
  "cursor_shape": "bar",
  "cursor_blink": false,
  "agent_ui_font_size": 14.0,
  "buffer_line_height": "comfortable",
  "buffer_font_weight": 300.0,
  "prettier": {
    "allowed": true,
  },
  "ui_font_weight": 300.0,
  "ui_font_family": "VictorMono Nerd Font Propo",
  "project_panel": {
    "entry_spacing": "comfortable",
    "dock": "right",
  },
  "theme": "Ayu Dark",
  "ui_font_size": 16,
  "buffer_font_size": 18.0,
  "buffer_font_family": "VictorMono Nerd Font Propo",
  "preferred_line_length": 80,
}
