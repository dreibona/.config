###########
# aliases #
###########

alias vi="$EDITOR"
alias zs="$EDITOR $HOME/.config/zsh/.zshrc"
alias al="$EDITOR $HOME/.config/settings/alias"
alias rl="exec zsh -l"
alias cl="clear"
alias qt="exit"
alias nd="node"
alias nv="nvm"
alias bw="brew"
alias pm="pnpm"
alias yt="youtube-dl -f bestaudio"
alias dv="cd $HOME/Developer/"
alias db="cd $HOME/Developer/dreibona/"
alias dd="cd $HOME/Developer/dreibona/dreibona-design"
alias md="mkdir -p"
alias rd="rmdir"
alias --="cd -"
alias sl="ls"
alias ls="ls --color=auto"
alias lf="ls -AF"
alias ll="ls -al"
alias la="ls -a"
alias l1="ls -1"

##########
# backup #
##########

alias ps="sudo periodic daily weekly monthly &&
      echo Done running daily, weekly, and monthly scripts"

alias sk="sudo rsync -varE --delete-delay --progress --include='*/' \
      --files-from=$HOME/.config/settings/list $HOME /Volumes/server/backup"

alias dk="sudo rsync -varE --delete-delay --progress --include='*/' \
      --files-from=$HOME/.config/settings/list $HOME /Volumes/data/2022_backup"

alias ck="sudo rsync -varE --delete-delay --progress \
      /Volumes/server/comics/ /Volumes/data/comics"
