bold=$(tput bold)
normal=$(tput sgr0)

# aliases
alias zs="$EDITOR $HOME/.config/zsh/.zshrc"
alias al="$EDITOR $HOME/.config/settings/alias"
alias dv="cd $HOME/Developer/"
alias db="cd $HOME/Developer/dreibona/"
alias dd="cd $HOME/Developer/dreibona/dreibona-design"
alias rl="exec zsh -l"
alias cl="clear"
alias qt="quit"
alias et="exit"
alias nd="node"
alias nv="nvm"
alias bw="brew"
alias pm="pnpm"
alias yt="youtube-dl"
alias md="mkdir -p"
alias rd="rmdir"
alias sl="ls"
alias ls="ls --color=auto"
alias lf="ls -AF"
alias ll="ls -al"
alias la="ls -a"
alias l1="ls -1"
alias -- -="cd -"
alias yac="$HOME/.config/yacreader/./yacreader.sh"

# backup
alias ss="sudo periodic daily weekly monthly &&
      echo '' &&
      echo '${bold}Done running daily, weekly, and monthly scripts${normal}' &&
      echo '' &&
      omz update"

alias sk="sudo rsync -varE --delete-delay --progress --include='*/' \
      --files-from=$HOME/.config/settings/backup $HOME /Volumes/server/backup"

alias dk="sudo rsync -varE --delete-delay --progress --include='*/' \
      --files-from=$HOME/.config/settings/backup $HOME /Volumes/data/2022_backup"

alias ck="sudo rsync -varE --delete-delay --progress \
      /Volumes/server/comics/ /Volumes/data/comics"
